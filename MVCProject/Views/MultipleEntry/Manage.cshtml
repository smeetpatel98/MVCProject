@using MVCProject.Controllers
@model List<MVCProject.Models.UserEntity>
    @{ 
        int intSno = 0;
    }

<div class="card shadow" mb-4>
    <div class="card-header py-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="datatable" width="100%" cellpadding="0">
                    <thead>
                        <tr>
                            <th>
                                No.
                            </th>
                            <th>
                                Full Name
                            </th>
                            <th>
                                EmailID
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Gender
                            </th>
                            <th>
                                Edit
                            </th>
                            <th>
                                Delete
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        intSno = intSno + 1;
                        <tr>
                            <td>
                                @intSno
                            </td>
                            <td>
                                @Html.DisplayFor(Model => item.User_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(Model => item.Email_ID)
                            </td>
                            <td>
                                @Html.DisplayFor(Model => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(Model => item.Gender)
                            </td>
                            <td>
                                <a href="@Url.Action("Index" , "MultipleEntry", new { item.User_ID, item.User_Name, item.Email_ID, item.Address, item.Gender,item.DOB})" class="btn btn-success">Edit</a>
                            </td>
                            <td>
                                <a href="@Url.Action("DeleteUser", new { item.User_ID})" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
