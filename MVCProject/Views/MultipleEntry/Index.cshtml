@model MVCProject.Models.UserDetailsMaintenance
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="messagealert" id="alert_container"></div>
    <div class="row">
        <section class="col-md-5">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h4 class="box-title">User Entry</h4>
                </div>
                <div class="box-body">
                    @{
                        Html.RenderPartial("Create", new ViewDataDictionary(Model.UserInfo));
                        //Html.RenderPartial("Create");
                    }
                </div>
            </div>
        </section>
        <section class="col-md-7">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="col-md-6">User Details</h4>

                    @{
                        Html.RenderPartial("Manage", new ViewDataDictionary(Model.UserData));
                        //Html.RenderPartial("Manage");
                    }
                </div>
            </div>
        </section>
    </div>
    @*<script src="~/Themedata/plugins/datatables/jquery.dataTables.min.js"></script>*@
    <script src="~/Themedata/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Themedata/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>



    @section Scripts {
        @* <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>*@

<script type="text/javascript">
            $(document).ready(function () {
                $('#Usertbl').DataTable({
                    "paging": true,
                    "lengthChange": false,
                    "searching": false,
                    "ordering": true,
                    "info": true,
                    /*"autoWidth": false,*/
                    "responsive": true,
                });

            });
            function ConfirmationDialog() {
                if (confirm("Are you sure to continue?"))
                    return true;
                else
                    return false;

                @*@Scripts.Render("~/bundles/jqueryui")
                @Styles.Render("~/Content/cssjqryUi")*@
                $(document).ready(function () {
                    $('input[type=datetime]').datepicker({
                        dateFormat: "dd/M/yy",
                        changeMonth: true,
                        changeYear: true,
                        yearRange: "-60:+0"
                    });

                });
            }
</script>
        }
</section>


